# DevSecOps Security Test Container
# Validates workflow execution on Docker image changes
FROM python:3.11-slim

LABEL maintainer="DevSecOps Team"
LABEL description="Security validation container for DevSecOps pipeline"
LABEL version="1.0.0"

# Set non-root user
RUN useradd -m -u 1000 appuser

# Install security tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy application files
COPY --chown=appuser:appuser . .

# Install Python dependencies
RUN pip install --no-cache-dir \
    pytest==7.2.0 \
    pytest-cov==4.0.0 \
    bandit==1.7.4 \
    black==22.12.0

# Run security scanning
RUN bandit -r . -f json -o /tmp/bandit-report.json || true

# Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run tests
RUN pytest --cov=. --cov-report=json:coverage.json tests/ || true

# Default command
CMD ["python", "-m", "pytest", "tests/", "-v"]
